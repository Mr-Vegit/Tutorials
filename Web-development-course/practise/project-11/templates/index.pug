extends template.pug

block scripts
block style 
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css")
  style
    include ../static/css/index.css
    include ../static/css/media.css
block content
  p#pagename.hide #{episodeId} 
  p#type.hide #{type} 
  section#recents-anime
    div#watch-history-controls
      h1 Recently Watched
      div#controls
        button.previous
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512")
            path(d="M512 256A256 256 0 1 0 0 256a256 256 0 1 0 512 0zM231 127c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-71 71L376 232c13.3 0 24 10.7 24 24s-10.7 24-24 24l-182.1 0 71 71c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0L119 273c-9.4-9.4-9.4-24.6 0-33.9L231 127z")
        button.next 
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512")
            path(d="M0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM281 385c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l71-71L136 280c-13.3 0-24-10.7-24-24s10.7-24 24-24l182.1 0-71-71c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0L393 239c9.4 9.4 9.4 24.6 0 33.9L281 385z")          
    div#watch-history
      div.my-slider
      template.watch-history-template
        div.watch-history-cards
          a.watch-history-link(href="#")
            img.watch-history-img
          a.watch-history-delete(href="#")
            svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
              path(d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z")
          p.watch-history-title
          p.watch-history-episode
    div#recent-head
      a(href="/") Latest episodes 
      div.typesubordub
        a(href="/recent-release/1?type=1") Sub
        a(href="/recent-release/1?type=2") Dub
        a(href="/recent-release/1?type=3") Chinese Dub
    div#recents-anime-container
      template.recents-anime-template
        div.recents-anime-cards
          a.recents-anime-link(href="#")
            img.recents-anime-img
            p.recent-sub-or-dub
          p.recents-anime-title
          p.recents-anime-episode
  section#pages 
    a#first-page(href="#") First page
    div.pages-div
      a.pages-a 
      a.pages-a 
      a.pages-a 
      a.pages-a  
      a.pages-a   
    a#last-page(href="#") Last page
  script(src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/min/tiny-slider.js") 
  script(src='../static/js/index.js' type='module')   